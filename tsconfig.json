{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2017",
        "declaration": false,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "strictNullChecks": false,
        "sourceMap": true
    },
    "include": [
        "./src",
        "declaration.d.ts",
        "index.d.ts"
    ],
    "lib": [
        "dom",
        "ES2018"
    ],
    "exclude": [
        "./node_modules",
        "./.parcel-cache",
        "./dist"
    ]
}


